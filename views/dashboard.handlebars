<div class="max-w-4xl mx-auto flex flex-col gap-5 items-start p-5">
    <h1 class="text-4xl">{{name}}'s Pages</h1>
    {{#if pages.title}}
    <div>{{pages}}</div>
        {{#each pages}}
            <div class="justify-between p-3">
                <h1>{{title}}</h1>
                <p class="text-zinc-600">{{dateCreated}}</p>
                <div class="flex gap-2">
                    <button class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">View</button>
                    <button class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">Edit</button>
                    <button class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">Delete</button>
                </div>
            </div>
        {{/each}}
    {{else}}
        <h3>You don't have any saved pages.</h3>
    {{/if}}

    <a id="create-page-btn" href="/create" class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-1 transition-all">Create</a>

</div>
